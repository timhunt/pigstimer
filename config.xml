<?xml version='1.0' encoding='utf-8'?>
<widget id="uk.me.timhunt.pigstimer" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pigs timer</name>
    <description>
        This app reverses direction at random times, with an audible alarm. For use when playing games.
    </description>
    <author email="T.J.Hunt@open.ac.uk" href="https://github.com/timhunt">
        Tim Hunt
    </author>
    <content src="index.html" />
    <preference name="BackgroundColor" value="0xfff4ffff" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="SuppressesLongPressGesture" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-insomnia" spec="~4.3.0" />
    <platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="files/ios/icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="files/ios/icon-60.png" width="60" height="60" />
        <icon src="files/ios/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="files/ios/icon-76.png" width="76" height="76" />
        <icon src="files/ios/icon-76@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="files/ios/icon-40.png" width="40" height="40" />
        <icon src="files/ios/icon-40@2x.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="files/ios/icon.png" width="57" height="57" />
        <icon src="files/ios/icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="files/ios/icon-72.png" width="72" height="72" />
        <icon src="files/ios/icon-72@2x.png" width="144" height="144" />
        <!-- iPad Pro -->
        <icon src="files/ios/icon-167.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="files/ios/icon-small.png" width="29" height="29" />
        <icon src="files/ios/icon-small@2x.png" width="58" height="58" />
        <icon src="files/ios/icon-small@3x.png" width="87" height="87" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="files/ios/icon-50.png" width="50" height="50" />
        <icon src="files/ios/icon-50@2x.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="files/ios/icon-83.5@2x.png" width="167" height="167" />
    </platform>
</widget>
